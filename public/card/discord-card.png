<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <!-- Card Background with gradient -->
  <defs>
    <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1F2937" /> <!-- from-gray-800 -->
      <stop offset="100%" stop-color="#111827" /> <!-- to-gray-900 -->
    </linearGradient>
    <linearGradient id="spotifyProgress" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#10B981" /> <!-- bg-green-500 -->
      <stop offset="75%" stop-color="#10B981" /> <!-- bg-green-500 -->
      <stop offset="75%" stop-color="#4B5563" /> <!-- bg-gray-600 -->
      <stop offset="100%" stop-color="#4B5563" /> <!-- bg-gray-600 -->
    </linearGradient>
  </defs>

  <!-- Main Card Container with Rounded Corners -->
  <rect x="10" y="10" width="380" height="280" rx="16" ry="16" fill="url(#cardGradient)" />

  <!-- Profile Section -->
  <g transform="translate(30, 30)">
    <!-- Avatar -->
    <circle cx="30" cy="30" r="30" fill="#4B5563" stroke="#1F2937" stroke-width="4" />
    <image href="/api/placeholder/60/60" x="0" y="0" height="60" width="60" clip-path="url(#avatarClip)" />
    <clipPath id="avatarClip">
      <circle cx="30" cy="30" r="28" />
    </clipPath>

    <!-- Status Indicator -->
    <circle cx="52" cy="52" r="10" fill="#111827" />
    <image href="/api/placeholder/16/16" x="44" y="44" height="16" width="16" />

    <!-- Username and Display Name -->
    <text x="75" y="25" font-family="Arial" font-size="20" font-weight="bold" fill="white">DisplayName</text>
    <text x="75" y="45" font-family="Arial" font-size="14" fill="#D1D5DB">username</text>

    <!-- Badges Container -->
    <rect x="75" y="55" width="100" height="24" rx="8" ry="8" fill="#111827" />
    
    <!-- Badges Icons -->
    <image href="/api/placeholder/16/16" x="80" y="59" height="16" width="16" />
    <image href="/api/placeholder/16/16" x="100" y="59" height="16" width="16" />
    <image href="/api/placeholder/16/16" x="120" y="59" height="16" width="16" />
    <image href="/api/placeholder/16/16" x="140" y="59" height="16" width="16" />

    <!-- Custom Status Speech Bubble -->
    <g transform="translate(250, 20)">
      <rect x="0" y="0" width="100" height="30" rx="8" ry="8" fill="#374151" />
      <text x="10" y="20" font-family="Arial" font-size="12" fill="white">Custom Status</text>
      <circle cx="-8" cy="22" r="4" fill="#374151" />
      <circle cx="-16" cy="26" r="6" fill="#374151" />
    </g>
  </g>

  <!-- Spotify Section -->
  <g transform="translate(30, 120)">
    <rect x="0" y="0" width="340" height="100" rx="16" ry="16" fill="rgba(55, 65, 81, 0.5)" />
    
    <!-- Album Art -->
    <rect x="15" y="15" width="60" height="60" rx="8" ry="8" fill="#4B5563" />
    <image href="/api/placeholder/60/60" x="15" y="15" height="60" width="60" clip-path="url(#albumClip)" />
    <clipPath id="albumClip">
      <rect x="15" y="15" width="60" height="60" rx="8" ry="8" />
    </clipPath>

    <!-- Song Info -->
    <text x="90" y="30" font-family="Arial" font-size="14" font-weight="bold" fill="white">Song Title</text>
    <text x="90" y="50" font-family="Arial" font-size="12" fill="#D1D5DB">Artist Â· Album</text>
    
    <!-- Spotify Icon -->
    <image href="/api/placeholder/24/24" x="300" y="25" height="24" width="24" />
    
    <!-- Progress Bar -->
    <rect x="15" y="85" width="310" height="8" rx="4" ry="4" fill="url(#spotifyProgress)" />
    
    <!-- Timestamps -->
    <text x="15" y="105" font-family="Arial" font-size="10" fill="#10B981">1:30</text>
    <text x="315" y="105" font-family="Arial" font-size="10" fill="#10B981" text-anchor="end">3:45</text>
  </g>

  <!-- Alternative: Activity Card (shown if not listening to Spotify) -->
  <g transform="translate(30, 230)" opacity="0">
    <rect x="0" y="0" width="340" height="60" rx="8" ry="8" fill="#111827" />
    
    <!-- Activity Image -->
    <rect x="15" y="15" width="40" height="40" rx="8" ry="8" fill="#4B5563" />
    <image href="/api/placeholder/40/40" x="15" y="15" height="40" width="40" clip-path="url(#activityClip)" />
    <clipPath id="activityClip">
      <rect x="15" y="15" width="40" height="40" rx="8" ry="8" />
    </clipPath>
    
    <!-- Activity Info -->
    <text x="70" y="30" font-family="Arial" font-size="12" fill="#60A5FA" font-weight="600">Activity Name</text>
    <text x="70" y="45" font-family="Arial" font-size="10" fill="#D1D5DB">Activity Details</text>
    <text x="70" y="60" font-family="Arial" font-size="10" fill="#6B7280">Activity State</text>
  </g>
</svg>
